<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/img">

    <!-- Texto de bienvenida -->

    <!-- Botón para acceder al Menú del Restaurante -->

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="264dp"
        android:layout_height="251dp"
        android:src="@drawable/logo_proyecto" />

    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="bottom|center"
        android:text="¡Bienvenido, Mauricio!"
        android:textColor="#141414"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMenuRestaurante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:padding="12dp"
        android:text="Ver Menú"
        android:textColor="#090909" />

    <!-- Botón para hacer una Reserva -->
    <Button
        android:id="@+id/btnReserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:padding="12dp"
        android:text="Hacer una Reserva"
        android:textColor="#0B0B0B" />

    <!-- Botón para Ver Pedidos -->
    <Button
        android:id="@+id/btnPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:padding="12dp"
        android:text="Ver Pedidos"
        android:textColor="#121212" />

</LinearLayout>
